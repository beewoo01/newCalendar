<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="hello"
            type="cookmap.cookandroid.hw.newcalendar.adpater.Gallery_Adapter" />
    </data>

    <RelativeLayout
        android:id="@+id/item_bgd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >


        <ImageView
            android:id="@+id/picture_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:adjustViewBounds="false"
            android:contentDescription="@string/pickedPicture"
            android:scaleType="centerCrop" />

        <RelativeLayout
            android:id="@+id/number_dot_item"
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:layout_margin="5sp"
            android:background="@drawable/dot_primary">

            <TextView
                android:id="@+id/picked_number_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/colorWhite"
                android:textSize="12sp"
                android:textStyle="bold"
                tools:text="10" />
        </RelativeLayout>

    </RelativeLayout>

</layout>