<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="item_term"
            type="cookmap.cookandroid.hw.newcalendar.db.Memo_Date" />

        <variable
            name="item_content"
            type="cookmap.cookandroid.hw.newcalendar.db.Content_Room" />
    </data>

    <LinearLayout
        android:id="@+id/noImg_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <RelativeLayout
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:bgColor="@{item_content.label}"
            tools:background="@color/colorYellow"
            >

                <TextView
                    android:id="@+id/day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    tools:text="12\nfri"
                    >
                </TextView>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="5dp"
            >
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="23sp"
                android:text="@{item_content.title}"
                tools:text="title 입니다."
                >
            </TextView>

            <TextView
                android:id="@+id/descrip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:text="@{item_content.description}"
                tools:text="description 입니다."
                >
            </TextView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/sterm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:text="@{item_term.start_day}"
                    tools:text="12/30"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:text="~"
                    android:layout_marginStart="10dp"
                    />

                <TextView
                    android:id="@+id/eterm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:text="@{item_term.end_day}"
                    android:layout_marginStart="10dp"
                    tools:text="21/03/30"
                    />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</layout>